{
    "config":{
        "repo_path":"/path/to/local/hg/repo",
        "qemu_path":"/path/to/qemu-trustzone/bin",
        "qemu_bin":"qemu-system-arm",
        "qemu_args":"-kernel build/kernel/kernel.elf -cpu cortex-a15 -m 512 -M vexpress-a15 -serial stdio",
        "default-branch":"default"
    },
    "projects":[
    {
        "name":"services",
        "recipe":"none",
        "default-branch":"default"
    },
    {
        "name":"kernelC",
        "recipe":"c",
        "branches":[
        {
            "branch":"default",
            "targets":[
            {
                "target":"vexpress",
                "qemu":true
            },
            {
                "target":"ls1021a",
                "qemu":false
            },
            {
               "target":"sabre_lite",
               "qemu":false
            }
            ]
        }
        ]
    },
    {
        "name":"kernelSM",
        "recipe":"smart",
        "branches":[
        {
            "branch":"default",
            "targets":[
            {
                "target":"vexpress",
                "qemu":true
            }
            ]
        }
        ]
    }
    ]
}
